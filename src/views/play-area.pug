.d-flex.container-fluid.row.col-12
  .col-4.btn-group.btn-group-toggle.d-flex.align-items-center.player-tabs.justify-content-around
    .btn.btn-secondary.active.player-tab.player-2-button.hidden
      input#player2(type="radio" name="options" autocomplete="off" checked)
      span#player2text
    .btn.btn-secondary.player-tab.player-3-button.hidden
      input#player3(type="radio" name="options" autocomplete="off")
      span#player3text
