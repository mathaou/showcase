  .col-12.d-flex-align-content-center.justify-content-between.hand-size
    .form-group
      label(for='cardNumber') How Many Cards to Wrangle?
      select#cardNumber.form-control
        option 5
        option 7
  .col-12.d-flex-align-content-center.justify-content-between.stock-size
    .form-group
      label(for='stockNumber') How Many to Stockpile?
      select#stockNumber.form-control
        option 15
        option 20
        option 25
        option 30
  .col-12.d-flex-align-content-center.justify-content-between.name-area
    .form-group
      label(for='playerName') What's Yer Name?
        textarea#playerName.form-control(rows='1')
